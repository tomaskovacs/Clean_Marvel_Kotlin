<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/image_character_detail"
            android:layout_width="@dimen/character_detail_width"
            android:layout_height="@dimen/character_detail_height"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/text_character_detail_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            app:layout_constraintStart_toStartOf="@id/image_character_detail"
            app:layout_constraintEnd_toEndOf="@id/image_character_detail"
            app:layout_constraintTop_toBottomOf="@id/image_character_detail" />

        <TextView
            android:id="@+id/text_character_detail_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            app:layout_constraintStart_toStartOf="@id/image_character_detail"
            app:layout_constraintEnd_toEndOf="@id/image_character_detail"
            app:layout_constraintTop_toBottomOf="@id/text_character_detail_name" />

</android.support.constraint.ConstraintLayout>
